          "enum": [
            "ConformsTo",
            "Contains",
            "DoesNotConformTo",
            "DoesNotContain",
            "DoesNotHaveImage",
            "DoesNotHaveText",
            "DoesNotMatch",
            "EndsWith",
            "Equal",
            "GreaterThan",
            "GreaterThanOrEqual",
            "HasImage",
            "HasText",
            "Is",
            "IsAfter",
            "IsBefore",
            "IsEmpty",
            "IsNot",
            "IsNotEmpty",
            "LessThan",
