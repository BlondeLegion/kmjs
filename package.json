{
  "name": "kmjs",
  "version": "1.0.0",
  "description": "A TypeScript toolkit for treating Keyboard Maestro macros as code. Enables exporting, importing, and simulating macros in-memory with both real and virtual macro workflows.",
  "author": "BlondeLegion",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlondeLegion/kmjs.git"
  },
  "bugs": {
    "url": "https://github.com/BlondeLegion/kmjs/issues"
  },
  "homepage": "https://github.com/BlondeLegion/kmjs#readme",
  "keywords": [
    "keyboard-maestro",
    "macos",
    "automation",
    "typescript",
    "jxa",
    "applescript",
    "macro",
    "workflow",
    "virtual-actions"
  ],
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.js",
    "dist/index.d.ts",
    "dist/kmjs.*.js",
    "dist/kmjs.*.d.ts",
    "dist/queries/**/*",
    "dist/tokens/**/*",
    "dist/utils/**/*",
    "dist/virtual_actions/**/*",
    "LICENSE",
    "README.md",
    "CHANGELOG.md",
    ".github/instructions"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@4.5.2",
  "dependencies": {
    "chalk": "^5.4.1",
    "fast-xml-parser": "^4.2.4"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/chalk": "^2.2.4",
    "@types/node": "^24.0.13",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "execa": "^9.6.0",
    "jest-diff": "^30.0.4",
    "prettier": "^3.6.2",
    "rollup": "^4.46.1",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "typescript-json-schema": "^0.65.1",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "build": "yarn clean && tsc -p . && yarn copy-data-files",
    "copy-data-files": "mkdir -p dist/tokens/data && cp src/tokens/data/* dist/tokens/data/",
    "bundle": "rollup -c",
    "build:all": "yarn build && yarn bundle",
    "pack:tarball": "rm -f kmjs-*.tgz && npm pack",
    "build:release": "yarn build:all && yarn pack:tarball",
    "bundle:watch": "rollup -c --watch",
    "prepublishOnly": "yarn build && yarn bundle",
    "prepack": "yarn build && yarn bundle",
    "version": "yarn build:release",
    "prepare": "yarn build && yarn bundle",
    "setup:local": "node scripts/setup-local-development.js",
    "validate:package": "node scripts/validate-package.js",
    "bundle:info": "yarn bundle && ls -lh bundle/",
    "clean": "rm -rf dist/ bundle/ coverage/",
    "dev": "ts-node src/index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "macros:export": "node scripts/export-kmjs-macros.js",
    "macros:import": "node scripts/import-kmjs-macros.js",
    "vm:demo": "ts-node src/demo/kmjs.demo.virtualNotification.ts '/Users/USER/Library/example.flac'",
    "test": "vitest",
    "clear": "clear && clear && clear",
    "test:coverage": "vitest run --coverage",
    "test:generate-test-schema": "node scripts/generate-combined-schema.js",
    "test:integration": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/*.spec.ts",
    "test:integration:clickAtFoundImage": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.clickAtFoundImage.integration.spec.ts",
    "test:integration:comment": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.comment.integration.spec.ts",
    "test:integration:ifThenElse": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.ifThenElse.integration.spec.ts",
    "test:integration:ifThenElse:multi": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.ifThenElse.multipleConditions.integration.spec.ts",
    "test:integration:activate": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.activate.integration.spec.ts",
    "test:integration:notification": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.notification.integration.spec.ts",
    "test:integration:pause": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.pause.integration.spec.ts",
    "test:integration:playSound": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.playSound.integration.spec.ts",
    "test:integration:quit": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.quit.integration.spec.ts",
    "test:integration:manipulateWindow": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.manipulateWindow.integration.spec.ts",
    "test:integration:typeKeystroke": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.typeKeystroke.integration.spec.ts",
    "test:integration:keystrokeValidation": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.keystrokeValidation.integration.spec.ts",
    "test:integration:switchCase": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.switchCase.integration.spec.ts",
    "test:integration:switchCase:multi": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.switchCase.multipleCases.integration.spec.ts",
    "test:integration:return": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.return.integration.spec.ts",
    "test:integration:setVariable": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.setVariable.integration.spec.ts",
    "test:integration:setVariableToCalculation": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.setVariableToCalculation.integration.spec.ts",
    "test:integration:selectMenuItem": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.selectMenuItem.integration.spec.ts",
    "test:integration:scrollWheelEvent": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.scrollWheelEvent.integration.spec.ts",
    "test:integration:showStatusMenu": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.showStatusMenu.integration.spec.ts",
    "test:integration:cancel": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.cancel.integration.spec.ts",
    "test:integration:copy": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.copy.integration.spec.ts",
    "test:integration:cut": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.cut.integration.spec.ts",
    "test:integration:moveAndClick": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.moveAndClick.integration.spec.ts",
    "test:integration:screenCapture": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.screenCapture.integration.spec.ts",
    "test:integration:useVariable": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.useVariable.integration.spec.ts",
    "test:integration:file": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.file.integration.spec.ts",
    "test:integration:showSpecificApp": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.showSpecificApp.integration.spec.ts",
    "test:integration:insertText": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.insertText.integration.spec.ts",
    "test:integration:paste": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.paste.integration.spec.ts",
    "test:integration:setClipboardToText": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.setClipboardToText.integration.spec.ts",
    "test:integration:while": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.while.integration.spec.ts",
    "test:integration:pressButton": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.pressButton.integration.spec.ts",
    "test:integration:clearTypedStringBuffer": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.clearTypedStringBuffer.integration.spec.ts",
    "test:integration:group": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.group.integration.spec.ts",
    "test:integration:open": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.open.integration.spec.ts",
    "test:integration:openURL": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/integration/kmjs.virtualAction.openURL.integration.spec.ts",
    "test:keys": "vitest run --reporter=dot tests/unit/keystroke.*.spec.ts",
    "test:keys:watch": "vitest --watch --reporter=dot tests/unit/keystroke.*.spec.ts",
    "test:tokens": "yarn clear && vitest run --reporter=dot --environment=node tests/unit/tokens.spec.ts",
    "test:utils:styledText": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/unit/utils.styledText.spec.ts",
    "test:utils:kmet": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/unit/utils.kmet.spec.ts",
    "test:utils:kmet:demo": "yarn clear && vitest run --reporter=verbose --environment=node tests/unit/utils.kmet.demo.spec.ts",
    "show:last-failure": "node scripts/show-last-failure.js",
    "tree": "node scripts/folder-tree.js .",
    "tree:no-sizes": "node scripts/folder-tree.js --no-sizes .",
    "test:unit:queries": "vitest run --bail=1 --reporter=dot --environment=node tests/test_virtual_actions/kmjs.queries.unit.spec.ts",
    "test:unit:generateMacro": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/unit/kmjs.generateMacro.spec.ts",
    "convert:macro": "node scripts/convert-macro-to-virtual.js",
    "test:convert": "yarn clear && vitest run --bail=1 --reporter=dot --environment=node tests/unit/convert-macro-to-virtual.spec.ts"
  }
}
